@model appProyectoDSWI_Tienda.Models.Categoria

@{
    ViewBag.Title = "nuevoCategoria";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>INGRESO DE CATEGORIA</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Categoria</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.nomCateg, htmlAttributes: new { @class = "control-label col-md-2" })
