                @Html.EditorFor(model => model.desCateg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.desCateg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="REGISTRAR" class="btn btn-default" />
            </div>
        </div>
    </div>
}

