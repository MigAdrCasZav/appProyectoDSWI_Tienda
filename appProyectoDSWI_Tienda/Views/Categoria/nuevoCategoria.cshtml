                @Html.EditorFor(model => model.nomCateg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomCateg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.desCateg, htmlAttributes: new { @class = "control-label col-md-2" })
